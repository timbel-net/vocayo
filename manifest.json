{
  "manifest_version": 3,
  "name": "vocayo",
  "description": "Simple vocabulary",
  "version": "0.1",
  "icons": {
    "16": "assets/icons/16.png"
  },
  "action": {},
  "background": {
    "service_worker": "vocayo-background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "vocayo-content.js"
      ]
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "enabled": true,
        "id": "net-request-rules",
        "path": "net-request-rules.json"
      }
    ]
  },
  "host_permissions": [
    "https://dict.naver.com/",
    "https://en.dict.naver.com/"
  ],
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "declarativeNetRequest"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+V"
      }
    }
  }
}